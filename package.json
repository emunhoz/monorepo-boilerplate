{
  "name": "monorepo-boilerplate",
  "version": "0.0.1",
  "repository": "git@github.com:emunhoz/monorepo-boilerplate.git",
  "author": "emunhoz <edermunhozsantos@gmail.com>",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "license": "MIT",
  "scripts": {
    "commit": "git-cz",
    "watch:design-tokens": "npm run start --workspace=@monorepo/design-tokens",
    "watch:components": "npm run start --workspace=@monorepo/components",
    "test:components": "npm run test --workspace=@monorepo/components",
    "test:app": "npm run test --workspace=@monorepo/app",
    "test:update": "npm run test:update --ws --if-present",
    "postinstall": "npm run libbuild --ws --if-present",
    "start": "npm run start --workspace=@monorepo/app",
    "build-app": "npm run build --workspace=@monorepo/app",
    "build-components": "npm run build --workspace=@monorepo/components",
    "storybook": "npm run storybook --workspace=@monorepo/components",
    "build-storybook": "npm run build-storybook --workspace=@monorepo/components",
    "lint": "npm run lint --ws --if-present",
    "lint:css": "npm run lint:css --ws --if-present",
    "test:ci": "npm run test:coverage --workspace=@monorepo/components && npm run test:coverage --workspace=@monorepo/app",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@commons/stylelint-config": "*",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.0",
    "commitizen": "^4.2.4",
    "commitlint-config-monorepo": "^2.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "git-commit-msg": "^0.3.0",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.2",
    "standard-version": "^9.3.2",
    "typescript": "^4.6.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
