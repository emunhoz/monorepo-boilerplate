{
  "name": "monorepo-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/emunhoz/monorepo-boilerplate.git",
  "author": "emunhoz <edermunhozsantos@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "start": "turbo run start --parallel",
    "commit": "git-cz",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!docs && changeset publish",
    "start:web": "npm run start --workspace @monorepo/web-react-vite-app",
    "start:server": "npm run start --workspace @monorepo/server",
    "build-app": "turbo run build",
    "storybook": "npm run storybook --workspace @monorepo/ui-components",
    "build-storybook": "npm run build-storybook --workspace @monorepo/ui-components",
    "lint": "turbo run --parallel lint",
    "lint:css": "turbo run --parallel lint:css",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "test:ci": "turbo run --parallel test:coverage"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^12.1.4",
    "@commons/stylelint-config": "*",
    "@changesets/cli": "^2.25.2",
    "commitizen": "^4.2.2",
    "commitlint-config-monorepo": "^2.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "git-commit-msg": "^0.3.0",
    "git-cz": "^4.9.0",
    "husky": "^6.0.0",
    "prettier": "^2.7.1",
    "turbo": "^1.6.3",
    "typescript": "^4.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
